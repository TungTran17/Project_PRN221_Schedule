@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    .container {
        margin-top: 50px;
        display: flex;
        justify-content: center;
    }

    .card {
        max-width: 600px;
        margin: auto;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .row {
        margin-bottom: 1rem;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        font-style: italic;
    }

    .btn {
        margin-right: 10px;
    }

    .btn-danger {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        background-color: red;
        color: #fff;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn-danger:hover {
            background-color: #0056b3;
        }

    a.btn-secondary {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        background-color: #ccc;
        color: #555;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        a.btn-secondary:hover {
            background-color: #bbb;
        }
</style>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-2">Day Of WeeK: </div>
                <div class="col-sm-10">@Model.WeekSchedule.WeekIndex</div>
            </div>

            <div class="row">
                <div class="col-sm-2">Room: </div>
                <div class="col-sm-10">@Model.WeekSchedule.Room.RoomCode</div>
            </div>

            <div class="row">
                <div class="col-sm-2">Teacher: </div>
                <div class="col-sm-10">@Model.WeekSchedule.Group.Teacher.TeacherName</div>
            </div>

            <div class="row">
                <div class="col-sm-2">Class Name: </div>
                <div class="col-sm-10">@Model.WeekSchedule.Group.Class.ClassName</div>
            </div>

            <div class="row">
                <div class="col-sm-2">Slot:</div>
                <div class="col-sm-10">@Model.WeekSchedule.Slot.StartTime - @Model.WeekSchedule.Slot.EndTime</div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="WeekSchedule.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./ManagerSchedule" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>
