@page
@model EditScheduleModel

@{
    ViewData["Title"] = "EditSchedule";
}

<style>
    .container {
        margin-top: 50px;
        text-align: center;
    }

    form {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: inline-block; /* Ensure the form is inline-block */
    }

    label {
        font-weight: bold;
    }

    input[type="submit"],
    a.btn-primary {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        input[type="submit"]:hover,
        a.btn-primary:hover {
            background-color: #0056b3;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .text-danger {
        color: red;
    }

    /* Style for "Back to List" button */
    a.btn-secondary {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        background-color: #ccc;
        color: #555;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        a.btn-secondary:hover {
            background-color: #bbb;
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WeekSchedule.Id" />
                <div class="form-group">
                    <label asp-for="WeekSchedule.ScheduleId" class="control-label">Schedule ID: </label>
                    <input asp-for="WeekSchedule.ScheduleId" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="WeekSchedule.WeekIndex" class="control-label">Day of Week: </label>
                    <!-- Assuming WeekIndex is mapped to DayOfWeek -->
                    <input asp-for="WeekSchedule.WeekIndex" class="form-control" />
                    <span asp-validation-for="WeekSchedule.WeekIndex" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WeekSchedule.RoomId" class="control-label">Room Code: </label>
                    <select asp-for="WeekSchedule.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                    <span asp-validation-for="WeekSchedule.RoomId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WeekSchedule.GroupId" class="control-label">Group ID: </label>
                    <input asp-for="WeekSchedule.GroupId" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="WeekSchedule.SlotId" class="control-label">Slot: </label>
                    <select asp-for="WeekSchedule.SlotId" class="form-control" asp-items="ViewBag.SlotId"></select>
                    <span asp-validation-for="WeekSchedule.SlotId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-page="./ManagerSchedule" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
